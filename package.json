{
  "name": "vscode-dylan",
  "description": "Dylan language support for Visual Studio Code",
  "version": "0.4.0",
  "publisher": "dylan-foundry",
  "icon": "images/dylan-squares.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dylan-lang/vscode-dylan/issues"
  },
  "homepage": "https://github.com/dylan-lang/vscode-dylan/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/dylan-lang/vscode-dylan.git"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "dylan"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^24.10.13",
    "@types/vscode": "^1.51.0",
    "mocha": "^11.7.5",
    "ts-standard": "^12.0.2",
    "typescript": "^5.0.4"
  },
  "activationEvents": [
    "onLanguage:dylan",
    "onCommand:workbench.action.tasks.runTask"
  ],
  "contributes": {
    "configuration": {
      "title": "Dylan",
      "properties": {
        "dylan.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "verbose",
            "messages"
          ],
          "default": "off",
          "description": "Activate tracing"
        },
        "dylan.project": {
          "type": "string",
          "description": "Sets the name of the current project"
        },
        "dylan.compiler": {
          "description": "Absolute path to the Open Dylan compiler. If blank, look for 'dylan-compiler' in the current PATH",
          "type": "string",
          "default": ""
        },
        "dylan.lspServer": {
          "description": "Absolute path to the Open Dylan Language Server. If blank, look for 'dylan-lsp-server' in the current PATH",
          "type": "string",
          "default": ""
        }
      }
    },
    "problemMatchers": [
      {
        "name": "dylan-compiler-problems",
        "owner": "vscode-dylan",
        "fileLocation": "autoDetect",
        "pattern": {
          "regexp": "^(.*):(\\d+)\\.(\\d+)-((\\d+)\\.)?(\\d+):\\s+(.*)\\s-\\s(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "endLine": 5,
          "endColumn": 6,
          "severity": 7,
          "message": 8
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "dylan-compiler",
        "required": [
          "project"
        ],
        "properties": {
          "project": {
            "type": "string",
            "description": "The project name to build."
          }
        }
      }
    ],
    "languages": [
      {
        "id": "dylan",
        "aliases": [
          "Dylan",
          "dylan"
        ],
        "extensions": [
          ".dylan",
          ".intr"
        ],
        "configuration": "./dylan.configuration.json"
      },
      {
        "id": "dylan-lid",
        "aliases": [
          "Dylan LID file"
        ],
        "extensions": [
          ".lid",
          ".hdp"
        ],
        "configuration": "./lid.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dylan",
        "scopeName": "source.dylan",
        "path": "./syntaxes/dylan.tmLanguage.json"
      },
      {
        "language": "dylan-lid",
        "scopeName": "source.lid",
        "path": "./syntaxes/lid.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "dylan",
        "path": "./snippets/dylan.json"
      }
    ]
  },
  "ts-standard": {}
}
